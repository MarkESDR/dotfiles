order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "load"
order += "tztime local"
order += "volume master"

wireless _first_ {
  format_up = "ðŸ“¡: (%quality at %essid )"
  format_down = "ðŸ“¡: down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "ðŸ“¶: (%speed)"
  format_down = "ðŸ“¶: down"
}

